// For format details, see https://aka.ms/devcontainer.json. For config options, see the
{
  "name": "${localWorkspaceFolderBasename}-devcontainer",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/var/www/${localWorkspaceFolderBasename}",
  // For use with PHP or Apache (e.g.php -S localhost:8080 or apache2ctl start)
  "forwardPorts": [],
  // Features to add to the dev container. More info: https://containers.dev/features.
  "features": {},
  // Use 'postCreateCommand' to run commands after the container is created.
  // "postCreateCommand": "bash -i -c 'nvm install --lts'", // Configure tool-specific properties.
  "customizations": {
    // Configure properties specific to VS Code.
    "vscode": {
      "settings": {},
      // Add the IDs of extensions you want installed when the container is created.
      "extensions": [
        "discretegames.f5anything",
        "EditorConfig.EditorConfig",
        "aaron-bond.better-comments",
        "yatki.vscode-surround",
        "Shazbot.surroundelection",
        "christian-kohler.path-intellisense",
        "lMagickl.open-doc-in-web",
        "jomeinaster.bracket-peek",
        "netcorext.uuid-generator",
        "ms-vscode.powershell",
        "mikestead.dotenv",
        "richie5um2.vscode-sort-json",
        "mhutchie.git-graph",
        "quentinguidee.gitignore-ultimate",
        "Postman.postman-for-vscode",
        "jock.svg",
        "fknop.vscode-npm",
        "christian-kohler.npm-intellisense",
        "Dang.package-json-helper",
        "mdickin.markdown-shortcuts",
        "Gruntfuggly.todo-tree"
      ]
    }
  },
  "portsAttributes": {},
  // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
  "remoteUser": "${localWorkspaceFolderBasename}-user",
  "shutdownAction": "none"

}